#include <iostream>
using namespace std;
int main(){
    int n;
    cout<<"Enter number of days ";
    cin>>n;

    int temps[100];  //max
    cout<<"Enter temperatures: ";
    for(int i=0;i<n;i++) {
        cin>>temps[i];
    }
    int answer[100] = {0};  // result array initialized to 0
    int st[100];   // max
    int top = -1;   // stack pointer
    for (int i = 0;i<n;i++) {      //While the current day's temperature (temps[i]) is warmer than the
        while (top >= 0 && temps[i] > temps[st[top]]) {//temperature of the day at the top of the stack:
            int idx = st[top--];      // remove index of previous day (pop)
            answer[idx] = i - idx;    // days waited
        }
        st[++top] = i;   // push current index
    }

    cout << "Days to wait for warmer temperature:\n";
    for (int i = 0; i < n; i++) {
        cout << answer[i] << " ";
    }
    cout << endl;

    return 0;
}
